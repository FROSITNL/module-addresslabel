<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:framework:Ui/etc/ui_configuration.xsd">
    <listingToolbar name="listing_top">
        <massaction name="listing_massaction">
            <action name="frosit_addresslabel">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="type" xsi:type="string">frosit_addresslabel</item>
                        <item name="label" xsi:type="string" translate="true">Print Addresses</item>
                        <item name="url" xsi:type="url" path="frosit_addresslabel/order/pdforders"/>
                    </item>
                </argument>
            </action>
        </massaction>
    </listingToolbar>
</listing>

